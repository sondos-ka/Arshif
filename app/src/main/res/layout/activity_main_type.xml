<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTypeActivity"
    android:layoutDirection="ltr"
    >

    <androidx.appcompat.widget.AppCompatEditText

        android:id="@+id/ed_AddType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/write_type"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:textColor="@color/colorBlue"
        android:gravity="center"



        />





 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_Add"
     android:layout_width="80dp"
     android:layout_height="50dp"
     app:layout_constraintTop_toBottomOf="@id/ed_AddType"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_marginTop="30dp"
     android:textColor="@color/colorBlue"
     android:text="@string/Add"
     android:textSize="20dp"
     android:background="@color/colorDarkYellow"

     />

    <ListView
        android:id="@+id/lv_MainType"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_Add"
        app:layout_constraintBottom_toBottomOf="parent"
        android:divider="@color/colorDarkYellow"
 />


</androidx.constraintlayout.widget.ConstraintLayout>