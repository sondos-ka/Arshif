<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/search_container">








    <TextView

        android:id="@+id/tvCost_line_sch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="cost"
        android:textColor="@color/colorDarkYellow"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDate_line_sch"
        />

    <TextView

        android:id="@+id/tvDate_line_sch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="date"
        android:textColor="@color/colorBlue"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/tvCost_line_sch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




 <TextView

        android:id="@+id/tvNote_line_sch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Note"
        android:textColor="@color/colorBlue"
      android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/tvCost_line_sch"
              app:layout_constraintEnd_toStartOf="@id/tvDate_line_sch"

      app:layout_constraintTop_toBottomOf="@id/tvCost_line_sch"

        />

</androidx.constraintlayout.widget.ConstraintLayout>